{
  "name": "elm-review-action",
  "version": "0.1.0",
  "description": "Use elm-review to check code quality",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "run-s build format lint pack test ;"
  },
  "homepage": "https://github.com/sparksp/elm-review-action#readme",
  "bugs": {
    "url": "https://github.com/sparksp/elm-review-action/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sparksp/elm-review-action.git"
  },
  "keywords": [
    "actions",
    "elm-review",
    "lint"
  ],
  "author": "Phill Sparks <me@phills.me.uk> (https://github.com/sparksp)",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0",
    "@octokit/action": "^3.1.6"
  },
  "devDependencies": {
    "@octokit/types": "^6.2.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "@zeit/ncc": "^0.22.3",
    "elm": "^0.19.1-3",
    "elm-format": "^0.8.3",
    "elm-review": "^2.2.6",
    "eslint": "^7.17.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^3.14.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
